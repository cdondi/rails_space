<h2>Register</h2>
<%= form_for :user do |form| %>
    <fieldset>
      <legend>Enter Your Details</legend>

      <div class="fieldWithErrors">
        <% if @user && @user.errors.any? %>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
        <% end %>
      </div>


      <%= render :partial => "screen_name_field_row", :locals => { :form => form } %>
      <%= render :partial => "email_field_row", :locals => { :form => form } %>
      <%= render :partial => "password_field_row",
                 :locals => { :form => form, :field => "password"} %>
      <%= render :partial => "password_field_row",
                 :locals => { :form => form, :field => "password_confirmation", :field_title => "Confirm"} %>
      <div class="form_row">
        <%= submit_tag "Register!", :class => "submit" %>
      </div>
    </fieldset>
<% end %>
